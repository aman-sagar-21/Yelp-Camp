<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center ">
        <div class="row justify-content-center">
            <div class="col-md-8 ">
                <h3 class="text-center text-muted">
                    <%=user.username%>'s campgrounds
                </h3>
                <div class="row mt-3 justify-content-center">
                    <div class="col-sm-8">

                        <%if(campgrounds.length>0){%>
                            <div style="border: 2px solid red; border-radius: 10px; background-color: black; padding: 5px; display: flex;" class="my-2">
                                <ul>
                                    <%for(let campground of campgrounds){%>
                                        <li style="list-style: disc; color: blue;">
                                            <a href="/campgrounds/<%=campground._id%>">
                                                <%=campground.title%>
                                            </a>
                                        </li>
                                        <%}%>
                                </ul>
                            </div>
                            <%}else{%>
                                <div style="border: 1px solid red; border-radius: 5px; color: red; background-color: black; padding: 5px; margin: 2px;" class="container text-center">
                                    No campgrounds found
                                </div>
                                <%}%>

                    </div>
                </div>
            </div>
        </div>
    </div>